<div class="container">

<h2> Edit Post </h2>

<%= form_for @post do |f| %>
<%= f.label :title %>
<%= f.text_field :title, placeholder: "Edit Title" %>
<%= f.label :content %>
<%= f.text_area :content, placeholder: "Edit your post here", :cols => "20", :rows => "20" %>
<%= f.submit "Edit Post", class: "waves-effect waves-light blue lighten-3 btn" %>
<% end %>

</div>
