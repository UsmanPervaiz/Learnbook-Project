<h1> Create New Account</h1>

<%= flash[:message] %>
<% if @user.errors.any? %>
<% @user.errors.full_messages.each do |error| %>
<%= error %> <br> <br>
<% end %>
<% end %>

<%= form_for @user do |f| %>
<%= f.label :first_name, "Enter your legal first name" %> <br>
<%= f.text_field :first_name %> <br>
<%= f.label :last_name, "Enter your legal last name" %> <br>
<%= f.text_field :last_name %> <br>
<%= f.label :username, "Username (must be between 6-12 characters)" %> <br>
<%= f.text_field :username %> <br>
<%= f.label :password, "Password (must be between 6-12 characters)" %> <br>
<%= f.password_field :password %> <br>
<%= f.label :password_confirmation, "Confirm Password" %> <br>
<%= f.password_field :password_confirmation %> <br>
<%= f.label :birthday %> <br>
<%= f.date_field :birthday %> <br>
<%= f.label :email %> <br>
<%= f.text_field :email %> <br> <br>
<%= f.submit "Register Account" %> <br> <br>
<% end %>

<%= link_to "Already have an account? Click here!", new_session_path %>
