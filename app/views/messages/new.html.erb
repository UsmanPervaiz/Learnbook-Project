<div class="container">

<h3 class="center">Send a Message </h3>
    <%= form_for @new_message do |f| %>
        <%= f.hidden_field :receiver_id, value: @receiver.id %>
        <%= f.text_area :message_content, rows: "5", cols: "30" %><br>
        <%= f.submit "Click to send Message", class: "inline-buttons waves-effect waves-light blue lighten-3 btn", data: { confirm: "Are you sure you want to send the message?"} %>
    <% end %>
</div>
